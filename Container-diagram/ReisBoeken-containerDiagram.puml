@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml

SHOW_PERSON_OUTLINE()
Person(GebruikerAlias, "Gebruiker", "Een gebruiker van de app die een reis wil boeken")
Container_Boundary("Triptop", "Triptop app") {
System(APIAlias, "Web Applicatie", "regelt de api calls")
System(database, " Database", "Slaat gebruikers en reisinformatie op")
}

System_Ext(containerAlias2, "Boekings-API", "Verantwoordelijk voor boekingen")
System_Ext(containerAlias3, "Betaal-API", "Verantwoordelijk voor betalingen")
System_Ext(containerAlias4, "E-mail API", "Verantwoordelijk voor het versturen van e-mails")
System_Ext(containerAlias5, "SMS API", "Verantwoordelijk voor het versturen van SMS berichten")



Rel(containerAlias4, GebruikerAlias, "Stuurt mail naar")
Rel(containerAlias5, GebruikerAlias, "Stuurt SMS bericht naar")

Rel(APIAlias, database, "Leest en haalt data op")
Rel(GebruikerAlias, APIAlias, "Bezoekt de app")
Rel(APIAlias, containerAlias4, "Stuurt een mail via")
Rel(APIAlias, containerAlias5, "Stuurt SMS via")
Rel(APIAlias, containerAlias2, "Verstuurt boekingsverzoek naar")
Rel(APIAlias, containerAlias3, "Verstuurt betaalverzoek naar")

@enduml